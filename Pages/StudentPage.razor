@page "/studentpage"

<h3 class="text-center" style="font-weight:bold;">LIST STUDENTS</h3>
<br>

  <a href="studentpage" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Add Student">
    <span class="oi oi-plus" aria-hidden="true"></span> Add Student
  </a>

<br><br>

@* Tabel Students *@
<table class="table table-striped table-hover">

  <thead>
    <tr>
        <th>NIM</th>
        <th>Nama Depan</th>
        <th>Nama Belakang</th>
        <th>Tanggal Masuk</th>
        <th>Aksi</th>
    </tr>
  </thead>

  <tbody>
    @foreach(var mhs in Students){
        <tr>
            <td>@mhs.studentID</td>
            <td>@mhs.firstName</td>
            <td>@mhs.lastName</td>
            <td>@mhs.enrollmentDate</td>
            <td>
              
              <a href="" class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="top" title="Detail">
                <span class="oi oi-eye" aria-hidden="true"> Detail</span>
              </a>

              <a href="" class="btn btn-success" data-bs-toggle="tooltip" data-bs-placement="top" title="Enroll">
                <span class="oi oi-cog" aria-hidden="true"> Enroll</span>
              </a>

               <a href="" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                <span class="oi oi-cog" aria-hidden="true"> Edit</span>
              </a>

              <a href="" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                <span class="oi oi-trash" aria-hidden="true"> Delete</span>
              </a>
       
            </td>
        </tr>
    }
  </tbody>

</table>
@* Tabel Students *@