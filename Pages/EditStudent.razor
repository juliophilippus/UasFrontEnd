@page "/editmahasiswa/{id}"

<EditForm Model="@Student" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator/>
    <h3 class="text-center" style="font-weight:bold;">EDIT MAHASISWA</h3>
    <hr>
    <div class="form-group row">
        <label for="nim" class="col-sm-2 col-form-label">
            NIM
        </label>
        <div class="col-sm-10">
            <InputText id="nim" class="form-control" placeholder="Masukkan NIM" 
                @bind-Value="Student.studentID">
            </InputText>
            <ValidationMessage For="@(()=>Student.studentID)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            Nama Depan
        </label>
        <div class="col-sm-10">
            <InputText id="firsName" class="form-control" placeholder="Masukkan Nama Depan" 
                @bind-Value="Student.firstName">
            </InputText>
            <ValidationMessage For="@(()=>Student.firstName)"></ValidationMessage>
        </div>
    </div>
     <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Nama Belakang
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Nama Belakang" 
                @bind-Value="Student.lastName">
            </InputText>
            <ValidationMessage For="@(()=>Student.lastName)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row">
        <label for="enrollmentDate" class="col-sm-2 col-form-label">
            Tanggal Masuk
        </label>
        <div class="col-sm-10">
            <InputDate @bind-Value="Student.enrollmentDate" class="form-control"></InputDate>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Simpan</button>
    <a href="mahasiswa" class="btn btn-secondary">Kembali</a>
</EditForm>